@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBMYWarehouse;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>Warehouse</h4>
                    <h6>Manage your categories</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Pdf"><img src="~/AdminEn/assets/img/icons/pdf.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Excel"><img src="~/AdminEn/assets/img/icons/excel.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Print"><i data-feather="printer" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Refresh"><i data-feather="rotate-ccw" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Collapse" id="collapse-header"><i data-feather="chevron-up" class="feather-chevron-up"></i></a>
                </li>
            </ul>
            <div class="page-btn">
                <a href="#" class="btn btn-added" data-bs-toggle="modal" data-bs-target="#add-Warehouse"><i data-feather="plus-circle" class="me-2"></i>Add New Warehouse</a>
            </div>
        </div>
        <!-- /product list -->
        <div class="card table-list-card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-input">
                            <a href="" class="btn btn-searchset"><i data-feather="search" class="feather-search"></i></a>
                        </div>
                    </div>
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <i data-feather="filter" class="filter-icon"></i>
                            <span><img src="~/AdminEn/assets/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="form-sort">
                        <i data-feather="sliders" class="info-img"></i>
                        <select class="select">
                            <option>Sort by Date</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                        </select>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="card" id="filter_inputs">
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="zap" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Warehouse</option>
                                        <option>Laptop</option>
                                        <option>Electronics</option>
                                        <option>Shoe</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="calendar" class="info-img"></i>
                                    <div class="input-groupicon">
                                        <input type="text" class="datetimepicker" placeholder="Choose Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="stop-circle" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12 ms-auto">
                                <div class="input-blocks">
                                    <a class="btn btn-filters ms-auto"> <i data-feather="search" class="feather-search"></i> Search </a>
                                </div>
                            </div>
                            <div class="page-title">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th class="no-sort">
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>@ResourceWeb.lbAccountNumber</th>
                                <th>@ResourceWeb.lbWarehouseName</th>
                                <th>@ResourceWeb.lbPhoneNumberw</th>
                                <th>@ResourceWeb.lbMasterMail</th>
                                <th>@ResourceWeb.LbUserName</th>
                                <th>@ResourceWeb.LbNameRols</th>
                                <th>@ResourceWeb.lbPhone</th>                           
                                <th>@ResourceWeb.LbDateTimeEntry</th>
                                <th>@ResourceWeb.LbDataEntry</th>
                                <th>@ResourceWeb.LbActive</th>
                                <th>@ResourceWeb.lbCurrentState</th>
                                <th class="no-sort">@ResourceWeb.LbOpration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListViewWarehouse)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td>@item.AccountNumber</td>
                                    <td>
                                        <div class="userimgname">
                                          
                                            <div>
                                                <a href="#">@item.WarehouseName</a>
                                            </div>
                                        </div>
                                    </td>

                                    <td>@item.PhoneNumber</td>
                                   

                                    <td>@item.MasterMail</td>

                                    <td>
                                        <div class="userimgname">
                                            <a href="#" class="userslist-img bg-img">
                                                <img src="@string.Format("/Images/Users/{0}", item.ImageUser)" alt="product">
                                            </a>
                                            <div>
                                                <a href="#">@item.Name</a>
                                            </div>
                                        </div>
                                    </td>

                                    <td>@item.Role</td>
                                    <td>@item.PhoneNumberUser</td>


                 
                                    <td>@item.DateTimeEntry</td>
                                    <td>@item.DataEntry</td>
                                    @if (item.Active == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }
                                    @if (item.CurrentState == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }
                                    <td class="action-table-data">
                                        <div class="edit-delete-action">

                                            <a class="me-2 p-2 mb-0" asp-area="Admin" asp-controller="Warehouse" asp-action="AddWarehouse" asp-route-IdWarehouse="@item.IdWarehouse" title="تعديل ">
                                                <i data-feather="zap" class="feather-eye"></i>
                                            </a>
                                            <a class="confirm-text p-2" asp-area="Admin" asp-controller="Warehouse" asp-action="DeleteData" asp-route-IdWarehouse="@item.IdWarehouse">
                                                <i data-feather="trash-2" class="feather-trash-2"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /product list -->
    </div>
</div>
<!-- /Main Wrapper -->
<!-- Add Warehouse -->
<div class="modal fade" id="add-Warehouse">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create Warehouse</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="Warehouse" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.Warehouse.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.Warehouse.IdWarehouse" class="form-control">
                                <input type="hidden" asp-for="@Model.Warehouse.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Warehouse.WarehouseName">@ResourceWeb.lbWarehouseName</label>
                                <input type="text" class="form-control" asp-for="@Model.Warehouse.WarehouseName">
                                <span asp-validation-for="@Model.Warehouse.WarehouseName" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["Warehouses"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1">تابع لحساب</label>
                                <select class="form-select" asp-items="@(new SelectList(ViewBag.BLevelThreeAccount, "IdLevelThreeAccount", "NameLevelThreeAccounts"))" id="IdLevelThreeAccount">
                                </select>

                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="Warehouse.AccountNumber">@ResourceWeb.lbNumberAccount</label>
                                <input type="text" class="form-control" asp-for="Warehouse.AccountNumber" id="Warehouse_NumberAccount" readonly>
                                <span asp-validation-for="Warehouse.AccountNumber" class="text-danger"></span>
                            </div>
                         
                       

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Warehouse.PhoneNumber">@ResourceWeb.lbPhone</label>
                                <input type="text" class="form-control" asp-for="@Model.Warehouse.PhoneNumber">
                                <span asp-validation-for="@Model.Warehouse.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Warehouse.MasterMail">@ResourceWeb.lbMasterMail</label>
                                <input type="email" class="form-control" asp-for="@Model.Warehouse.MasterMail">
                                <span asp-validation-for="@Model.Warehouse.MasterMail" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1">أمين المستودع</label>
                                <select class="form-control select2_1" asp-for="@Model.Warehouse.UserId" asp-items="@(new SelectList(ViewBag.user, "Id", "Name"))"></select>

                            </div>

                            <div class="card-body d-sm-flex align-item-center justify-content-between">

                                <div class="form-check form-check-lg form-switch">
                                    <input asp-for="@Model.Warehouse.Active" class="form-check-input" type="checkbox" role="switch" id="switch-lg">
                                    <label class="form-check-label" for="switch-lg">Active</label>
                                </div>
                                <div class="form-check form-check-lg form-switch">
                                    <input asp-for="@Model.Warehouse.CurrentState" class="form-check-input" type="checkbox" role="switch" id="switch-lg">
                                    <label class="form-check-label" for="switch-lg">Status</label>
                                </div>
                            </div>
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create Warehouse</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add Warehouse -->
@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);

            // حفظ اسم الصورة في الحقل المخفي (category-photo)
            var file = event.target.files[0];
            var fileName = file.name;  // الحصول على اسم الصورة فقط

            // تحديث الحقل المخفي باسم الصورة
            document.getElementById('category-photo').value = fileName;
        };
    </script>

    <script>
        $("#url").val(window.location.href);
    </script>
    <script>
            document.getElementById("IdLevelThreeAccount").addEventListener("change", function() {
            var idLevelThreeAccount = this.value; // القيمة التي تم اختيارها

            if (idLevelThreeAccount) {
                // إرسال القيمة إلى الكنترول عبر AJAX
                        fetch(`/Admin/Warehouse/GetNumberAccount?idLevelThreeAccount=${idLevelThreeAccount}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // تحديث حقل NumberAccount بالقيمة الجديدة
                            document.getElementById("Warehouse_NumberAccount").value = data.numberAccount;
                        } else {
                            alert(data.message); // في حال فشل العملية
                        }
                    })
                    .catch(error => console.error('Error:', error));
            }
        });
    </script>
}

